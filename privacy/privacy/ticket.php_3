<?php
// ticket.php - V3 (Con Notifica Email)
include 'config.php';

// --- CONFIGURAZIONE EMAIL ---
// Inserisci qui la tua mail dove vuoi ricevere gli avvisi
$admin_email = 'startupm3.5@gmail.com'; // O la tua mail personale
$mittente_notifica = 'noreply@piramide35.com';

// 1. VERIFICA PARAMETRI
if (!isset($_GET['t'])) die("Accesso Negato.");
$token = $_GET['t'];

// ADMIN MODE (Sei tu?)
$is_admin = (isset($_GET['admin']) && $_GET['admin'] == '1');

// Recupera info Ticket
$stmt = $conn->prepare("SELECT * FROM m35_tickets WHERE token = ?");
$stmt->bind_param("s", $token);
$stmt->execute();
$ticket = $stmt->get_result()->fetch_assoc();

if (!$ticket) die("Ticket non trovato.");

// 2. GESTIONE NUOVO MESSAGGIO
if ($_SERVER['REQUEST_METHOD'] === 'POST' && !empty($_POST['messaggio'])) {
    $msg_utente = $_POST['messaggio'];
    $sender = $is_admin ? 'ADMIN' : 'CLIENTE';

    // Salva nel DB
    $stmt = $conn->prepare("INSERT INTO m35_chat (ticket_id, sender, messaggio) VALUES (?, ?, ?)");
    $stmt->bind_param("iss", $ticket['id'], $sender, $msg_utente);
    $stmt->execute();

    // --- LOGICA INTELLIGENTE ---
    
    // SE HA SCRITTO IL CLIENTE (Rosalia):
    if (!$is_admin) {
        
        // A. NOTIFICA VIA EMAIL A TE
        $oggetto_mail = "Nuovo Messaggio Ticket: " . $ticket['cliente'];
        $corpo_mail = "Hai ricevuto un nuovo messaggio sul ticket: " . $ticket['oggetto'] . "\n\n";
        $corpo_mail .= "CLIENTE DICE:\n" . $msg_utente . "\n\n";
        $corpo_mail .= "LINK PER RISPONDERE (Admin):\n";
        $corpo_mail .= "https://piramide35.com/privacy/ticket.php?t=" . $token . "&admin=1";
        
        $headers = "From: " . $mittente_notifica . "\r\n";
        $headers .= "Reply-To: " . $mittente_notifica . "\r\n";
        
        // Invio effettivo
        @mail($admin_email, $oggetto_mail, $corpo_mail, $headers);

        // B. L'IA RISPONDE (Gemini)
        // 1. Recupera la storia
        $history_query = "SELECT sender, messaggio FROM m35_chat WHERE ticket_id = " . $ticket['id'] . " ORDER BY id ASC";
        $history_res = $conn->query($history_query);
        $chat_history = "";
        while($row = $history_res->fetch_assoc()) {
            $chat_history .= $row['sender'] . ": " . $row['messaggio'] . "\n";
        }

        // 2. Istruzioni IA
        $system_prompt = "
        Sei l'Assistente 'M 3.5 AI'. Parli con: " . $ticket['cliente'] . ".
        Oggetto Pratica: " . $ticket['oggetto'] . ".
        
        TUA MISSIONE:
        Rispondi in modo professionale e rassicurante.
        Se il cliente ha inviato dati importanti (tracking, foto), conferma la ricezione.
        Sii breve.
        
        STORIA DELLA CONVERSAZIONE:
        $chat_history
        
        RISPONDI AL CLIENTE:";

        // 3. Chiamata API
        $data = ["contents" => [["parts" => [["text" => $system_prompt]]]]];
        $options = [ 'http' => [ 'header' => "Content-type: application/json\r\n", 'method' => 'POST', 'content' => json_encode($data) ] ];
        $context  = stream_context_create($options);
        $url = "https://generativelanguage.googleapis.com/v1beta/models/gemini-3-flash-preview:generateContent?key=" . $gemini_api_key;
        $result = file_get_contents($url, false, $context);
        $response = json_decode($result, true);
        $ai_reply = $response['candidates'][0]['content']['parts'][0]['text'];

        // 4. Salva risposta IA
        $stmt = $conn->prepare("INSERT INTO m35_chat (ticket_id, sender, messaggio) VALUES (?, 'AI', ?)");
        $stmt->bind_param("is", $ticket['id'], $ai_reply);
        $stmt->execute();
    }
    
    // Refresh pagina
    $refresh_link = "ticket.php?t=" . $token . ($is_admin ? "&admin=1" : "");
    header("Location: " . $refresh_link);
    exit;
}

$chat_res = $conn->query("SELECT * FROM m35_chat WHERE ticket_id = " . $ticket['id'] . " ORDER BY id ASC");
?>

