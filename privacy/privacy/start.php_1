<?php
// start.php - Landing Page Pubblica (Il Chatbot "Portiere")
include 'config.php';

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $nome = $_POST['nome'];
    $problema = $_POST['problema'];
    
    // 1. CREA IL TICKET AUTOMATICAMENTE
    $token = bin2hex(random_bytes(16));
    $oggetto_auto = "Richiesta Web: " . substr($problema, 0, 30) . "..."; // Usa l'inizio del problema come oggetto
    
    $stmt = $conn->prepare("INSERT INTO m35_tickets (token, cliente, oggetto) VALUES (?, ?, ?)");
    $stmt->bind_param("sss", $token, $nome, $oggetto_auto);
    $stmt->execute();
    $ticket_id = $stmt->insert_id;

    // 2. INSERISCI IL PRIMO MESSAGGIO DEL CLIENTE
    $stmt = $conn->prepare("INSERT INTO m35_chat (ticket_id, sender, messaggio) VALUES (?, 'CLIENTE', ?)");
    $stmt->bind_param("is", $ticket_id, $problema);
    $stmt->execute();

    // 3. REINDIRIZZA ALLA CHAT VERA
    header("Location: ticket.php?t=" . $token);
    exit;
}
?>

